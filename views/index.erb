<form action="/add-to-order" method="post">
  <div class="container">
  <div id="multiplier" class="row btn-group btn-group-lg btn-block" role="group" aria-label="multiplier" data-toggle="buttons">
    <label class="btn btn-primary col-md-2">
      <input type="radio" name="multiplier" value="1" autocomplete="off" checked>1</input>
    </label>
    <% (2..9).each do |digit| %>
      <label class="btn btn-primary col-md-2">
        <input type="radio" name="multiplier" value="<%= digit %>" autocomplete="off"><%= digit %></input>
      </label>
    <% end %>
  </div>
  <hr>

<div class="container" id="menu">
  <% @cafe_prices.each_with_index do |(item, price), index| %>
    <%= '<div class="row">' if index%4 == 0 %>
      <div class="col-md-3">
        <button type="submit" name="item" class="btn btn-success btn-block" value="<%= item %>"><%= item %> - <%= price %></button>
      </div>
    <%= '</div>' if index%4 == 3 || index == @cafe_prices.count - 1%>
  <% end %>
</div>

</div>
</form>
<hr>
<div class="container" id="order">
  <h3>Your Order</h3>
  <ul>
    <% @cafe_prices.each do |item, price| %>
      <% if session.has_key?(item)%>
        <li><%= session[item].to_s + ' x ' + item + ' = Â£' + (session[item] * price).to_s%></li>
      <% end %>
    <% end %>
  </ul>
</div>
